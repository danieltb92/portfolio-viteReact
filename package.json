{
  "scripts": {
    "server": "nodemon server.js",
    "start-dev": "concurrently \"npm run server\" \"npm run dev-client\"",
    "dev-client": "cd client && npm run dev",
    "client": "cd client && npm install && npm run build",
    "build-client": "cd client && npm install && npm run build",
    "deploy": "cd client && npm install && npm run build && cd .. && npm install",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "prod": "concurrently \"npm run server:prod\" \"npm run client:prod\"",
    "server:dev": "cross-env NODE_ENV=development nodemon server.js",
    "server:prod": "cross-env NODE_ENV=production nodemon server.js",
    "client:dev": "cd client && npm run dev",
    "client:prod": "cd client && npm run build",
    "build": "cd client && npm run build",
    "start": "cross-env NODE_ENV=production node server.js",
    "preview": "cd client && npm run preview"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.14",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "i18next": "^23.11.5",
    "i18next-http-backend": "^2.5.2",
    "nodemon": "^3.1.0",
    "notion-to-md": "^3.1.1",
    "react-i18next": "^14.1.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0"
  }
}
